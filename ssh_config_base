# General
Match Host aa_*
    StrictHostKeyChecking no
    IdentitiesOnly yes
    BatchMode yes
    ForwardAgent yes

    # Ensures our SSH sessions remain alive when idle
    TCPKeepAlive yes
    ServerAliveInterval 30
    ConnectTimeout 30

    # Use temp generated ssh key for connection.
    IdentityFile ~/.ssh/ssm-ssh-tmp
    # Use ssh-ssm script to connect. Temp MFA credentials are used.
    ProxyCommand sh -c "AWS_PROFILE=default-mfa AWS_REGION=us-east-2 ssh-ssm.sh %h %r"
